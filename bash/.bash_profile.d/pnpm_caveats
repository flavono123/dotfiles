# vim: ft=sh

# https://pnpm.io/installation
if ! command -v pnpm &> /dev/null; then
  echo "pnpm command not found"
else
  # caveats from `wget -qO- https://get.pnpm.io/install.sh | sh -`
  export PNPM_HOME="$HOME/Library/pnpm"
  case ":$PATH:" in
    *":$PNPM_HOME:"*) ;;
    *) export PATH="$PNPM_HOME:$PATH" ;;
  esac

  alias pn="pnpm"
fi
